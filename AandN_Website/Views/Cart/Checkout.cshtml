@model AandN_Website.ViewModels.CheckoutViewModel

<h2>Checkout</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerName)
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber)
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ShippingAddress)
        @Html.TextBoxFor(m => m.ShippingAddress, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaymentMethod)
        @Html.DropDownListFor(m => m.PaymentMethod, new SelectList(new[] { "Credit Card", "Debit Card" }), "Select Method", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PromotionCode)
        @Html.TextBoxFor(m => m.PromotionCode, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Submit Order</button>
}
