@model AandN_Website.ViewModels.CatalogViewModel

<h2>Product Catalog</h2>

@using (Html.BeginForm())
{
    <p>
        Filter by Category: @Html.TextBoxFor(m => m.Category, new { @id = "categoryFilter" }) @* Added ID here *@
        <input type="submit" value="Filter" />
    </p>
}

@if (Model.Items != null && Model.Items.Length > 0)
{
    <div class="product-grid">
        @foreach (var item in Model.Items)
        {
            <div class="product-item">
                <div class="product-image-container">
                    <a href="/Catalog/Detail?id=@item.ProductID">
                        <img src="@item.ImageUrl" alt="@item.Name" width="150" />
                    </a>

                </div>
                <div class="product-details">
                    <div class="product-name">@item.Name</div>
                    <div class="product-price">
                        @item.Price.ToString("C")
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products found.</p>
}
